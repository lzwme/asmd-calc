{
  "name": "@lzwme/asmd-calc",
  "version": "1.3.1",
  "description": "支持浮点数精度的加减乘除四则运算 JS 库。",
  "main": "build/main/index.js",
  "browser": "build/main/index.js",
  "module": "build/module/index.js",
  "typings": "build/types/index.d.ts",
  "private": false,
  "license": "MIT",
  "repository": "https://github.com/lzwme/asmd-calc.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "keywords": [
    "calc",
    "precision",
    "number",
    "decimal",
    "float",
    "floating-point",
    "浮点数计算",
    "浮点数精确计算"
  ],
  "scripts": {
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.cjs.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "npm run cov",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch",
    "cov": "jest --coverage --silent",
    "cov:html": "jest --coverage --silent --reporter=html",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs --tsconfig tsconfig.module.json",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json --tsconfig tsconfig.module.json",
    "version": "standard-version",
    "clean": "trash build",
    "release": "run-s build doc:html",
    "release-version": "run-s test release version",
    "benchmark": "ts-node benchmark/index.ts"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@jest/core": "^27",
    "@lzwme/fed-lint-helper": "^1.6.0",
    "@swc/core": "^1.2.174",
    "@swc/jest": "^0.2.20",
    "@types/eslint": "^8.4.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^17",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27",
    "lint-staged": "^12.4.1",
    "mathjs": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "trash-cli": "^5.0.0",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "packageManager": "pnpm@7.0.0",
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write"
    ],
    "*.json": [
      "prettier --parser json --write"
    ]
  }
}
