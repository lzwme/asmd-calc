{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier",
    "tslint-immutable"
  ],
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-var-keyword": true,
    "no-parameter-reassignment": false,
    "typedef": [
      true,
      "call-signature"
    ],
    "readonly-keyword": [
      true,
      "ignore-local",
      "ignore-class",
      "ignore-interface"
    ],
    "readonly-array": false,
    "no-let": false,
    "no-object-mutation": false,
    "no-delete": true,
    "no-method-signature": true,
    "no-this": false,
    "no-this-assignment": false,
    "no-class": false,
    "no-mixed-interface": true,
    "no-expression-statement": [
      false,
      {
        "ignore-prefix": [
          "console.",
          "process.exit"
        ]
      }
    ],
    "no-if-statement": false,
    "curly": [
      true,
      "ignore-same-line"
    ]
  }
}
